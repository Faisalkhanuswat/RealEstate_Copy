<script>
    $(document).ready(function () {
        const url = $(location).attr('href')
        // dashboard
        if (url.includes("dashboard")) {
            $("#dashboard-link").addClass("active")
        }
        //table
        if (url.includes("table")) {
            $("#dashboard-link").removeClass("active")
            $("#table-link").addClass("active")
        }
        //calendar
        if (url.includes("calendar")) {
            $("#dashboard-link").removeClass("active")
            $("#calendar-link").addClass("active")
        }

        // mailbox=>
        //read
        if (url.includes("read")) {
            $("#dashboard-link").removeClass("active")
            $('#mailbox-link').addClass("active")
            $("#read-link").addClass("active")
        }
        //inbox
        if (url.includes("inbox")) {
            $("#dashboard-link").removeClass("active")
            $('#mailbox-link').addClass("active")
            $("#inbox-link").addClass("active")
        }
        //compose
        if (url.includes("compose")) {
            $("#dashboard-link").removeClass("active")
            $('#mailbox-link').addClass("active")
            $("#compose-link").addClass("active")
        }

        // pages or examples =>
        //invoice
        if (url.includes("invoice")) {
            $("#dashboard-link").removeClass("active")
            $('#page-link').addClass("active")
            $("#invoice-link").addClass("active")
        }
        //invoice
        if (url.includes("invoice")) {
            $("#dashboard-link").removeClass("active")
            $('#page-link').addClass("active")
            $("#invoice-link").addClass("active")
        }
        //profile
        if (url.includes("profile")) {
            $("#dashboard-link").removeClass("active")
            $('#page-link').addClass("active")
            $("#profile-link").addClass("active")
        }
        //add-package
        if (url.includes("add-package")) {
            $("#dashboard-link").removeClass("active")
            $('#package-link').addClass("active")
            $("#package-add-link").addClass("active")
        }
        //package-detail
        if (url.includes("package-detail")) {
            $("#dashboard-link").removeClass("active")
            $('#package-link').addClass("active")
            $("#package-detail-link").addClass("active")
        }
        //add-course
        if (url.includes("add-course")) {
            $("#dashboard-link").removeClass("active")
            $('#course-link').addClass("active")
            $("#course-add-link").addClass("active")
        }
         //course-detail
        if (url.includes("course-detail")) {
            $("#dashboard-link").removeClass("active")
            $('#course-link').addClass("active")
            $("#course-detail-link").addClass("active")
        }
        //add-chapter
        if (url.includes("add-chapter")) {
            $("#dashboard-link").removeClass("active")
            $('#chapter-link').addClass("active")
            $("#chapter-add-link").addClass("active")
        }
         //chapter-detail
        if (url.includes("chapter-detail")) {
            $("#dashboard-link").removeClass("active")
            $('#chapter-link').addClass("active")
            $("#chapter-detail-link").addClass("active")
        }
        //contact
        if (url.includes("contact")) {
            $("#dashboard-link").removeClass("active")
            $('#page-link').addClass("active")
            $("#contact-link").addClass("active")
        }
        //contact-us
        if (url.includes("contact-us")) {
            $("#dashboard-link").removeClass("active")
            $('#page-link').addClass("active")
            $("#contact-us-link").addClass("active")
            $("#contact-link").removeClass("active")
        }

        //search
        if (url.includes("search")) {
            $("#dashboard-link").removeClass("active")
            $('#search-link').addClass("active")
        }
    })
    //showing alert(toast)
    {{#if toast }}
