<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    {{!-- ajax cdn link --}}
    <script src="https://code.jquery.com/jquery-3.6.1.js"
        integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI=" crossorigin="anonymous"></script>

    <!-- bootstrap css cdn link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">


    <!-- custon css -->
    <link rel="stylesheet" href="./style/style.css">
</head>

<body>
    <main class="login-page pt-5 ">
        <div class="container">
            <div class="row">
                <!-- login -->
                <div class="col-xxl-4 col-lg-5 text-center login">
                    <div class="card">
                        <div class="bg-primary w-100 login-image-div">
                            <img src="./images/login/login-icon.png" class="img-fluid" alt="">
                        </div>
                        <h2 class="fw-bold">Login</h2>
                        <!-- <p class="m-0 mb-3">Already Registered?</p> -->
                        <p class="m-0 mb-3">Login here with your Email and Password</p>
                        <div class="px-3 mb-3">
                            <form action="/register" method="post" id="login-form">
                                <input type="email" class="form-control shadow-none mb-3" name="email"
                                    placeholder="Email">
                                <input type="password" class="form-control shadow-none mb-3" name="password"
                                    placeholder="Password">
                                <button type="submit"
                                    class="btn btn-primary border-0 px-3 rounded-2 fw-semibold fs-5 mt-3">Login</button>
                            </form>
                        </div>
                        <span>
                            <a href="#" class="link-primary">Forgot Password?</a>
                        </span>
                    </div>
                </div>
                <!-- Register -->
                <div class="col-lg-7 my-3 my-lg-0 offset-xxl-1 text-center register">
                    <div class="card">
                        <div class="bg-primary w-100 login-image-div">
                            <img src="./images/login/register-icon.png" class="img-fluid" alt="">
                        </div>
                        <h2 class="fw-bold">Register</h2>
                        <!-- <p class="m-0 mb-3">New Here?</p> -->
                        <p class="m-0 mb-3">Register here with your information</p>
                        <div class="px-3 mb-3">
                            <form action="/register" method="post">
                                <div class="row text-start">
                                    <div class="col-md-6">
                                        <label for="f-n" class="form-label">First Name</label>
                                        <input required type="text" id="f-n" class="form-control shadow-none mb-3"
                                            name="first_name" placeholder="First Name">
                                    </div>
                                    <div class="col-md-6">
                                        <label for="l-n" class="form-label">Last Name</label>
                                        <input required type="text" id="l-n" class="form-control shadow-none mb-3"
                                            name="last_name" placeholder="Last Name">
                                    </div>
                                    <div class="col-md-6">
                                        <label for="p-i" class="form-label">Personal Id</label>
                                        <input required type="text" id="p-i" class="form-control shadow-none"
                                            name="personal_id" placeholder="Your Personal Id" aria-describedby="">
                                        {{#if err}}
                                        <div id="pi" class="form-text text-danger">{{err.personal_id}}</div>
                                        {{/if}}
                                    </div>
                                    <div class="col-md-6">
                                        <label for="email" class="form-label">Email</label>
                                        <input required type="email" id="email" class="form-control shadow-none"
                                            name="email" placeholder="Email">
                                        {{#if err}}
                                        <div id="em" class="form-text text-danger">{{err.email}}</div>
                                        {{/if}}
                                    </div>
                                    <div class="col-md-6">
                                        <label for="ph-n" class="form-label">Phone Number</label>
                                        <input required type="number" id="ph-n" class="form-control shadow-none mb-3"
                                            name="phone" placeholder="Phone Number">
                                    </div>
                                    <div class="col-md-6">
                                        <label for="city" class="form-label">City</label>
                                        <input required type="text" id="city" class="form-control shadow-none mb-3"
                                            name="city" placeholder="City">
                                    </div>
                                    <div class="col-md-6">
                                        <label for="address" class="form-label">Address</label>
                                        <input required type="text" id="address" class="form-control shadow-none mb-3"
                                            name="address" placeholder="Address">
                                    </div>
                                    <div class="col-md-6">
                                        <label for="state" class="form-label">State</label>
                                        <input required type="text" id="state" class="form-control shadow-none mb-3"
                                            name="state" placeholder="State">
                                    </div>
                                    <div class="col-md-6">
                                        <label for="z-c" class="form-label">Zip Code</label>
                                        <input required id="z-c" type="number" class="form-control shadow-none mb-3"
                                            name="zip_code" placeholder="Zip Code">
                                    </div>
                                    <div class="col-md-6">
                                        <label for="dob" class="form-label">Date of Birth</label>
                                        <input required type="date" id="dob" class="form-control shadow-none mb-3"
                                            name="dob" value="pla">
                                    </div>
                                    <div class="col-md-6">
                                        <label for="password" class="form-label">Password</label>
                                        <input required id="password" type="password"
                                            class="form-control shadow-none mb-3 pass" name="password"
                                            placeholder="Password">
                                        {{!-- {{#if err}}
                                        <div id="pi" class="form-text text-danger">{{err.email}}</div>
                                        {{/if}} --}}
                                    </div>
                                    <div class="col-md-6">
                                        <label for="c_password" class="form-label">Confirm Password</label>
                                        <input required type="password" id="c_password" name="c-password"
                                            class="form-control shadow-none mb-3 pass" placeholder="Confirm Password">
                                    </div>
                                </div>
                                <button type="submit"
                                    class="btn btn-primary border-0 px-3 rounded-2 fw-semibold fs-5 mt-3">Register
                                    Now</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-- bootstrap js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>

    {{!--for form validaitons --}}
    <script src="./js/form-validations.js"></script>
</body>

</html>