{{>header}}

<body>
    <main class="login-page pt-5 ">
        <div class="container">
            <div class="row">
                <!-- Package Detail -->
                <div class="col-xxl-4 col-lg-5 text-center login">
                    <div class="card">
                        <div class="bg-primary w-100 login-image-div">
                            <h3 class="text-white" style="margin-top: -5px;">Order Summary</h3>
                        </div>
                        <div class="card-body">
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <th scope="row" class="text-start">Package</th>
                                        <th class="text-end">{{package.name}}</th>
                                    </tr>
                                    <tr>
                                        <td scope="row" class="text-start">Package Subtotal</td>
                                        <td class="text-end">${{package.price}}</td>
                                    </tr>
                                    <tr>
                                        <td scope="row" class="text-start">Order Discounts</td>
                                        <td class="text-danger text-end">-$0</td>
                                    </tr>
                                    <tr>
                                        <td scope="row" class="text-start">Taxes</td>
                                        <td class="text-end">{{package.tax}}%</td>
                                    </tr>
                                    <tr class="border-top">
                                        <th scope="row" class="text-start">Estimated Total</th>
                                        <th class="text-end">${{package.total}}</th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- Register -->
                <div class="col-lg-7 my-3 my-lg-0 offset-xxl-1 text-center register">
                    <div class="card pt-5 bg-primary text-white">
                        <div class="row">
                            <h3>Email Verification</h3>
                            <div class="my-3">
                                <img width="200" src="/images/icons/email-verification-icon.png" class="img-fluid"
                                    alt="">
                            </div>
                            <div>
                                <p class="mx-auto w-50 fs-18" style="font-weight: 300;">We have send 4 digits code via
                                    your email. Please
                                    check your email.<br><span
                                        style="color: var(--btn-primary);">sulimank418@gmail.com</span></p>
                            </div>
                            {{!-- form --}}
                            <div class="bg-white w-50 mx-auto py-5  rounded-8">
                                <form action="#"></form>
                                <div class="row justify-content-center mb-3 gx-1">
                                    <div class="" style="width:40px">
                                        <input type="number" required id="val1" name="val1" max="9" min="0"
                                            class="form-control verify-input border-0 shadow-none p-2">
                                    </div>
                                    <div class="" style="width:40px">
                                        <input type="number" required id="val2" name="val2" max="9" min="0"
                                            class="form-control verify-input border-0 shadow-none p-2">
                                    </div>
                                    <div class="" style="width:40px">
                                        <input type="number" required id="val3" name="val3" max="9" min="0"
                                            class="form-control verify-input border-0 shadow-none p-2">
                                    </div>
                                    <div class="" style="width:40px">
                                        <input type="number" required maxlength="1" id="val4" name="val4" max="9"
                                            min="0" class="form-control verify-input border-0 shadow-none p-2">
                                    </div>
                                </div>
                                <div>
                                    <button class="btn btn-success px-3 py-2" type="submit">Verify!</button>
                                </div>
                                </form>
                            </div>
                            {{!-- endform --}}
                            {{!-- didn't recieve --}}
                            <p class="fs-18 mt-3" style="font-weight: 300;">Didn't receive code?<br><a href="/" class="resend-code">Resend
                                    Code!</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    {{!--for form validaitons --}}
    <script src="./js/form-validations.js"></script>
    {{!-- verification form --}}
    <script>
        $(document).ready(function () {
            var val1 = $('#val1').val()
            //var val2 = $('#val2').val()
            ///var val3 = $('#val3').val()
            //var val4 = $('#val4').val()
            $('#val1').keyup(function () {
                // if(val >= 0){
                $('#val2').focus()
                //   }
            })
            $('#val2').keyup(function () {
                $('#val3').focus()
            })
            $('#val3').keyup(function () {
                $('#val4').focus()
            })
        })

    </script>
    {{>footer}}