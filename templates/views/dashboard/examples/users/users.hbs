{{>dashboardheader}}

<body class="hold-transition sidebar-mini">
  <!-- Site wrapper -->
  <div class="wrapper">
    <!-- toast(alert)-->
    {{>alert}}

    <!-- Navbar -->
    {{>dashboardNavbar}}
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    {{>dashboardMainSidebar}}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1>All Users</h1>
            </div>
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                <li class="breadcrumb-item active">User Edit</li>
              </ol>
            </div>
          </div>
        </div><!-- /.container-fluid -->
      </section>

      <!-- Main content -->
      <section class="content">

        <!-- Default box -->
        <div class="card card-solid">
          <div class="card-body pb-0">
            <div class="row">
              {{#each users}}
              <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                <div class="card bg-light d-flex flex-fill">
                  <div class="card-header text-muted border-bottom-0">
                    Student
                  </div>
                  <div class="card-body pt-0">
                    <div class="row">
                      <div class="col-7">
                        <h2 class="lead"><b>{{this.name}}</b></h2>
                        <p class="text-muted text-sm"><b>Package: </b> {{this.package.name}}
                        </p>
                        <ul class="ml-4 mb-0 fa-ul text-muted">
                          <li class="small"><span class="fa-li"><i class="fas fa-lg fa-envelope"></i></span> Email: <a
                              href="mailto:{{{this.email}}}" class="text-muted">{{{this.email}}}</a>
                          </li>
                          <li class="small"><span class="fa-li"><i class="fas fa-lg fa-id-card-alt"></i></span> Driver
                            License / CA ID: {{this.driver_license}}</li>
                          <li class="small"><span class="fa-li"><i class="fas fa-lg fa-calendar-alt"></i></span> DOB:
                            {{formatDate this.dob}}</li>
                        </ul>
                      </div>
                      <div class="col-5 text-center">
                        {{#if this.avatar}}
                        <img src="data:image/jpg;base64,{{this.avatar}}" alt="user-avatar" id="user-avatar"
                          class="img-circle img-fluid">
                        {{else}}
                        <img src="https://ui-avatars.com/api/?name={{this.name}}&size=256" alt="user-avatar"
                          class="img-circle img-fluid">
                        {{/if}}
                      </div>
                    </div>
                  </div>
                  <div class="card-footer">
                    <div class="text-right">
                      <a href="/dashboard/user-edit/{{this._id}}" class="btn btn-sm bg-teal">
                        <i class="fas fa-edit"></i>
                      </a>
                      <a href="/loginAsStudent?uid={{this._id}}" class="btn btn-sm btn-primary">
                        <i class="fas fa-user"></i> View</a>
                    </div>
                  </div>
                </div>
              </div>
              {{/each}}
            </div>
          </div>
          <!-- /.card-body -->
          <div class="card-footer">
            {{#ifCond users.pages ">" 1 }}
            <nav aria-label="Contacts Page Navigation">
              <ul class="pagination justify-content-center m-0">
                {{#forLoop users.pages}}
                <li class="page-item {{#ifEquals this ../users.currentPage}}active{{/ifEquals}}"><a class="page-link"
                    href="/dashboard/users?page={{this}}">{{this}}</a></li>
                {{/forLoop}}
                {{!-- <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">4</a></li>
                <li class="page-item"><a class="page-link" href="#">5</a></li>
                <li class="page-item"><a class="page-link" href="#">6</a></li>
                <li class="page-item"><a class="page-link" href="#">7</a></li>
                <li class="page-item"><a class="page-link" href="#">8</a></li> --}}
              </ul>
            </nav>
            {{/ifCond}}
          </div>
          <!-- /.card-footer -->
        </div>
        <!-- /.card -->

      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    {{>dashboardfooter}}

    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
      <!-- Control sidebar content goes here -->
    </aside>
    <!-- /.control-sidebar -->
  </div>
  <!-- ./wrapper -->

  <!-- jQuery -->
  {{>dashboardfooterlinks}}
</body>

</html>